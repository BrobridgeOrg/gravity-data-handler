{
	"rules": [
		{
			"event": "userCreated",
			"collection": "users",
			"method": "update",
			"mapping": [
				{
					"source": "id",
					"target": "id",
					"primary": true
				},
				{
					"source": "name",
					"target": "name"
				},
				{
					"source": "email",
					"target": "email"
				}
			]
		},
		{
			"event": "userDeleted",
			"collection": "users",
			"method": "delete",
			"mapping": [
				{
					"source": "id",
					"target": "id",
					"primary": true
				}
			]
		}
	]
}
